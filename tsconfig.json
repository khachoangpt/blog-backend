{
  "compilerOptions": {
    "target": "ES6",
    "experimentalDecorators": true,
    "module": "NodeNext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true
  },
  "files": ["src/type.d.ts"],
  "include": ["./src/**/*", "./server.ts"]
}
